{
    "pluginAlias": "VantageControls",
    "pluginType": "platform",
    "schema": {
      "type": "object",
      "properties": {
        "platform": {
          "title": "Platform Name",
          "type": "string",
          "const": "VantageControls"
        },
        "ipaddress": {
          "title": "Controller IP",
          "type": "string",
          "format": "ipv4"
        },
        "username": { "title": "Username", "type": "string" },
        "password": { "title": "Password", "type": "string" },
        "usecache": { "title": "Use Cache", "type": "boolean", "default": true },
        "omit": { "title": "Omit (comma-separated VIDs)", "type": "string" },
        "range": { "title": "VID Range (min,max)", "type": "string", "default": "0,999999999" },
        "forceSSL": { "title": "Force SSL", "type": "boolean", "default": false }
      },
      "required": ["platform", "ipaddress"],
      "additionalProperties": false
    }
  }
  